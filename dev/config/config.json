{
  "name": "valet",
  "description": "An Alfred-inspired navigation system for Drupal.",
  "bowerDir": "./bower_components",
  "browserSync": {
    "enabled" : true,
    "proxy" : "http://localhost",
    "port" : 3000,
    "openAutomatically" : false,
    "notify" : false
  },
  "css": {
    "dest": "../css",
    "src": [
      "scss/**/*.scss"
    ]
  },
  "js": {
    "dest": "../js",
    "src": [
      "js/**/*.js"
    ]
  }
}
